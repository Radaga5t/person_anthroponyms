<%= form_with model: @person do |f| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= label :person_lastname, "Last name" %>
    <%= f.text_field :lastname %>

    <%= label :person_firstname, "First name", required: true %>
    <%= f.text_field :firstname %>

    <%= label :person_middlename, "Middle name" %>
    <%= f.text_field :middlename %>

    <div>
      <%= f.radio_button :sex, :male, checked: true %>
      <%= label :person_sex, "Male" %>

      <%= f.radio_button :sex, :female %>
      <%= label :person_sex, "Female" %>
    </div>
    
    <%= f.submit class: "button-submit" %>
  </div>
<% end %>
